{
  "name": "good-morning-sticker-creator",
  "version": "1.0.0",
  "description": "Compiles the css (TailwindCSS) and the TypeScript files.",
  "main": "",
  "scripts": {
    "test": "typescript --init",
    "build_ts": "tsc -p ./tsconfig.json",
    "watch_ts": "tsc -p ./tsconfig.json -w",
    "build_tw": "tailwindcss -i ./tw/input.css -o ./static/css/dist/output.css",
    "watch_tw": "tailwindcss -i ./tw/input.css -o ./static/css/dist/output.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Samuel-Risner/good-morning-sticker-creator.git"
  },
  "author": "Samuel Risner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Samuel-Risner/good-morning-sticker-creator/issues"
  },
  "homepage": "https://github.com/Samuel-Risner/good-morning-sticker-creator#readme",
  "devDependencies": {
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4"
  }
}
